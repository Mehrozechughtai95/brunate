  {
    "name": "Side image Collection",
    "settings": [
	
	],
    "blocks": [
      {
        "type": "select",
        "name": "Add Icon",
        "settings": [
          {
            "id": "img-icon",
            "type": "image_picker",
            "label": "Image Icon"
          },
			{
              "id": "icon-text",
              "type": "richtext",
              "label": "Icon Text"
            }
        ]
      }
    ],
  "presets": [
        {
         "name": "Side image Section",
			"blocks": [
