<div class="side-image-section">
  <!--container as module-->
  <div class="module">
    <div class="row">
       {% for block in section.blocks %}
      <div class="col-md-3 col-sm-6 inner-img">
        <div class="inner-main-icon row align-items-center">
          <div class="side-icon col-sm-4">
           <img class="client Logo" src="{{ block.settings.img-icon | img_url: "" }}" alt="">
          </div>
          <div class="icon-content col-sm-8 text-left">
           {{ block.settings.icon-text}}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>


