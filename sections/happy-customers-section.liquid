<div class="brumate-prod-section">
  <div class="module-title ">
      <h2>{{ section.settings.section-title }}</h2>
    </div>
    <div class="row">
      {% for block in section.blocks %}
      <div class="col-md-3 col-sm-6 brumate-inner-prod">
        <img src="{{ block.settings.happy-image-id | img_url: "" }}" alt="">
      </div>
      {% endfor %}
    </div>
</div>
{% schema %}
 {
    "name": "Happy Customers Section",
    "settings": [
	{
      "id": "section-title",
      "type": "text",
      "label": "Heading",
      "default": "Title"
    }
	],
  	"blocks": [
      {
        "type": "select",
        "name": "Select Image",
        "settings": [
          {
            "id": "happy-image-id",
            "type": "image_picker",
            "label": "Select Image"
          }
        ]
      }
    ],
	"presets": [
        {
         "name": "Happy Customers Section",
			"blocks": [
            { 
              "type": "select"
            }
		  ]
        }
      ]
  }
{% endschema %}

