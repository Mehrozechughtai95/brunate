<div class="top-image-section">
  <!--container as module-->
  <div class="module pdt-0">
    <h2>{{ section.settings.icon-title }}</h2>
    <div class="row top-icons-row">
       {% for block in section.blocks %}
      <div class="col inner-img">
        <div class="inner-main-icon row align-items-center">
          <div class="side-icon">
           <img class="wholesale-icon" src="{{ block.settings.img-icon | img_url: "" }}" alt="">
          </div>
          <div class="icon-content">
           {{ block.settings.icon-text}}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Top image Section",
    "settings": [
	{
        "id": "icon-title",
        "type": "text",
        "label": "Title"
      }
	
	],
    "blocks": [
      {
        "type": "select",
        "name": "Add Icon",
        "settings": [
          {
            "id": "img-icon",
            "type": "image_picker",
            "label": "Image Icon"
          },
			{
              "id": "icon-text",
              "type": "richtext",
              "label": "Icon Text"
            }
        ]
      }
    ]
  }
{% endschema %}

